<zk>
	<style src="/public/Estilo.css" />
	<div apply="controlador.security.CEditarUsuario" id="divEditarUsuario"
		align="center">
		<groupbox closable="false" width="45%" mold="3d" title="Editar Usuario">
			<div id="botoneraEditarUsuario" />
			<separator />
			<grid width="100%">
				<columns visible="false">
					<column label="" width="35%" />
					<column label="" width="65%" />
				</columns>
				<rows>
					<row>
						<cell colspan="2">
							<vlayout>
								<label value="Nombre de Usuario:" class="etiqueta" />
								<textbox id="txtNombreUsuarioEditar" maxlength="50"
									disabled="true" tooltiptext="Nombre de Usuario Actual" />
							</vlayout>
						</cell>
					</row>
					<row>
						<cell colspan="2">
							<vlayout>
								<hbox>
									<label value="Nombre:" class="etiqueta" />
									<space />
									<label value="*" style="font-weight:bold;color:red" />
								</hbox>
								<textbox id="txtNombre" maxlength="50"
									tooltiptext="Ingrese el nombre de Usuario" />
							</vlayout>
						</cell>
					</row>
					<row>
						<cell colspan="2">
							<vlayout>
								<hbox>
									<label value="Apellido:" class="etiqueta" />
									<space />
									<label value="*" style="font-weight:bold;color:red" />
								</hbox>
								<textbox id="txtApellido" maxlength="50"
									tooltiptext="Ingrese el apellido de Usuario" />
							</vlayout>
						</cell>
					</row>
					<row>
						<cell colspan="2">
							<vlayout>
								<hbox>
									<label value="Correo:" class="etiqueta" />
									<space />
									<label value="*" style="font-weight:bold;color:red" />
								</hbox>
								<textbox id="txtCorreo" maxlength="50"
									tooltiptext="Ingrese el correo de Usuario (ejemplo@ejemplo.com)" />
							</vlayout>
						</cell>
					</row>
					<row>
						<cell colspan="2">
							<vlayout>
								<hbox>
									<label value="Contrase単a nueva:" class="etiqueta" />
									<space />
									<label value="*" style="font-weight:bold;color:red" />
								</hbox>
								<textbox id="txtClaveUsuarioNueva" type="password"
									maxlength="256" width="250px" tabindex="8"
									tooltiptext="Ingrese una Nueva Contrase単a" />
							</vlayout>
						</cell>
					</row>
					<row>
						<cell colspan="2">
							<vlayout>
								<hbox>
									<label value="Confirme su contrase単a:" class="etiqueta" />
									<space />
									<label value="*" style="font-weight:bold;color:red" />
								</hbox>
								<textbox id="txtClaveUsuarioConfirmar" type="password"
									maxlength="256" width="250px" tabindex="8" tooltiptext="Confirme su Contrase単a" />
							</vlayout>
						</cell>
					</row>
					<row>
						<cell colspan="1">
							<vlayout>
								<label class="etiqueta" value="Adjuntar Imagen:" />
								<fileupload label="Foto" id="fudImagenUsuario"
									image="/public/imagenes/botones/cargar.png" dir="reverse"
									style="	background: #999999;font-size: 12px;color: #8A0808;cursor: pointer;width: 105px;height: 30px;	font-weight: 800" />
							</vlayout>
						</cell>
						<cell colspan="1">
							<vlayout>
								<label class="etiqueta" value="Imagen Seleccionada:" />
								<image id="imgUsuario" width="50px" height="50px" />
							</vlayout>
						</cell>
					</row>
				</rows>
			</grid>
		</groupbox>
	</div>
</zk>